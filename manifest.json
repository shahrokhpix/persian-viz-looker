{
  "name": "Persian Community Visualization",
  "version": "1.0.0",
  "description": "A comprehensive Community Visualization for Looker Studio with full Persian (Farsi) language support, RTL layout, and multiple visualization types including charts, tables, KPI cards, and text displays.",
  "author": "Shahrokh Pix",
  "organization": "Community",
  "organizationUrl": "https://github.com/shahrokhpix",
  "supportUrl": "https://github.com/shahrokhpix/persian-viz-looker/issues",
  "privacyPolicyUrl": "https://github.com/shahrokhpix/persian-viz-looker/blob/main/PRIVACY.md",
  "termsOfServiceUrl": "https://github.com/shahrokhpix/persian-viz-looker/blob/main/TERMS.md",
  "packageUrl": "https://github.com/shahrokhpix/persian-viz-looker",
  "logoUrl": "https://raw.githubusercontent.com/shahrokhpix/persian-viz-looker/main/logo.png",
  "devMode": false,
  "components": [
    {
      "id": "persianViz",
      "name": "Persian Visualization",
      "icon": "https://raw.githubusercontent.com/shahrokhpix/persian-viz-looker/main/icon.png",
      "description": "Persian language visualization with multiple chart types and RTL support",
      "resource": {
        "js": "https://raw.githubusercontent.com/shahrokhpix/persian-viz-looker/main/index.js",
        "config": "https://raw.githubusercontent.com/shahrokhpix/persian-viz-looker/main/manifest.json"
      },
      "config": {
        "style": [
          {
            "id": "vizType",
            "name": "Visualization Type",
            "type": "SELECT_SINGLE",
            "defaultValue": "text",
            "options": [
              {
                "label": "Text Display",
                "value": "text"
              },
              {
                "label": "Bar Chart",
                "value": "bar"
              },
              {
                "label": "Line Chart",
                "value": "line"
              },
              {
                "label": "Pie Chart",
                "value": "pie"
              },
              {
                "label": "KPI Card",
                "value": "kpi"
              },
              {
                "label": "Table",
                "value": "table"
              },
              {
                "label": "Header/Title",
                "value": "header"
              }
            ]
          },
          {
            "id": "fontSize",
            "name": "Font Size",
            "type": "FONT_SIZE",
            "defaultValue": "16px"
          },
          {
            "id": "textColor",
            "name": "Text Color",
            "type": "COLOR",
            "defaultValue": "#000000"
          },
          {
            "id": "backgroundColor",
            "name": "Background Color",
            "type": "COLOR",
            "defaultValue": "#FFFFFF"
          },
          {
            "id": "textAlign",
            "name": "Text Alignment",
            "type": "SELECT_SINGLE",
            "defaultValue": "right",
            "options": [
              {
                "label": "Right",
                "value": "right"
              },
              {
                "label": "Center",
                "value": "center"
              },
              {
                "label": "Left",
                "value": "left"
              }
            ]
          },
          {
            "id": "direction",
            "name": "Text Direction",
            "type": "SELECT_SINGLE",
            "defaultValue": "rtl",
            "options": [
              {
                "label": "RTL (Right to Left)",
                "value": "rtl"
              },
              {
                "label": "LTR (Left to Right)",
                "value": "ltr"
              }
            ]
          },
          {
            "id": "borderWidth",
            "name": "Border Width",
            "type": "NUMBER",
            "defaultValue": 0,
            "min": 0,
            "max": 20
          },
          {
            "id": "borderColor",
            "name": "Border Color",
            "type": "COLOR",
            "defaultValue": "#CCCCCC"
          },
          {
            "id": "borderRadius",
            "name": "Border Radius",
            "type": "NUMBER",
            "defaultValue": 0,
            "min": 0,
            "max": 50
          },
          {
            "id": "padding",
            "name": "Padding",
            "type": "NUMBER",
            "defaultValue": 10,
            "min": 0,
            "max": 100
          },
          {
            "id": "margin",
            "name": "Margin",
            "type": "NUMBER",
            "defaultValue": 0,
            "min": 0,
            "max": 100
          },
          {
            "id": "barOrientation",
            "name": "Bar Chart Orientation",
            "type": "SELECT_SINGLE",
            "defaultValue": "vertical",
            "options": [
              {
                "label": "Vertical",
                "value": "vertical"
              },
              {
                "label": "Horizontal",
                "value": "horizontal"
              }
            ]
          },
          {
            "id": "chartColors",
            "name": "Chart Colors",
            "type": "TEXTAREA",
            "defaultValue": "#4285F4,#EA4335,#FBBC04,#34A853,#FF6D01,#46BDC6,#E67C73,#F7B928",
            "placeholder": "Comma-separated color codes"
          },
          {
            "id": "showLegend",
            "name": "Show Legend",
            "type": "CHECKBOX",
            "defaultValue": true
          },
          {
            "id": "showGridLines",
            "name": "Show Grid Lines",
            "type": "CHECKBOX",
            "defaultValue": true
          },
          {
            "id": "legendPosition",
            "name": "Legend Position",
            "type": "SELECT_SINGLE",
            "defaultValue": "bottom",
            "options": [
              {
                "label": "Top",
                "value": "top"
              },
              {
                "label": "Bottom",
                "value": "bottom"
              },
              {
                "label": "Right",
                "value": "right"
              },
              {
                "label": "Left",
                "value": "left"
              }
            ]
          },
          {
            "id": "kpiShowComparison",
            "name": "KPI: Show Comparison",
            "type": "CHECKBOX",
            "defaultValue": true
          },
          {
            "id": "tableShowPagination",
            "name": "Table: Show Pagination",
            "type": "CHECKBOX",
            "defaultValue": true
          },
          {
            "id": "tablePageSize",
            "name": "Table: Rows Per Page",
            "type": "NUMBER",
            "defaultValue": 10,
            "min": 5,
            "max": 100
          },
          {
            "id": "headerSize",
            "name": "Header Size",
            "type": "SELECT_SINGLE",
            "defaultValue": "h1",
            "options": [
              {
                "label": "H1 (Largest)",
                "value": "h1"
              },
              {
                "label": "H2",
                "value": "h2"
              },
              {
                "label": "H3",
                "value": "h3"
              },
              {
                "label": "H4",
                "value": "h4"
              }
            ]
          }
        ],
        "data": [
          {
            "id": "dimension",
            "label": "Dimension",
            "elements": [
              {
                "id": "dimension1",
                "label": "Dimension 1",
                "type": "DIMENSION",
                "options": {
                  "min": 0,
                  "max": 1
                }
              }
            ]
          },
          {
            "id": "metric",
            "label": "Metrics",
            "elements": [
              {
                "id": "metric1",
                "label": "Metric 1",
                "type": "METRIC",
                "options": {
                  "min": 1,
                  "max": 10
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
